
export ANDROID_NDK="$(mise where android-sdk)/ndk/27.2.12479018"
export ANDROID_NDK_HOME="$ANDROID_NDK"
export ANDROID_NDK_ROOT="$ANDROID_NDK"
export ANDROID_NDK_TOOLCHAINS="$ANDROID_NDK/toolchains/llvm/prebuilt/darwin-x86_64"
export ANDROID_NDK_TOOLCHAINS_BIN_DIR="$ANDROID_NDK_TOOLCHAINS/bin"


export PATH="$ANDROID_NDK_TOOLCHAINS_BIN_DIR:$PATH"


export ANDROID_NDK_TOOLCHAINS_SYSROOT="$ANDROID_NDK_TOOLCHAINS/sysroot"
export ANDROID_NDK_TOOLCHAINS_CC="$ANDROID_NDK_TOOLCHAINS_BIN_DIR/aarch64-linux-android24-clang"
export ANDROID_NDK_TOOLCHAINS_CXX="$ANDROID_NDK_TOOLCHAINS_BIN_DIR/aarch64-linux-android24-clang++"
